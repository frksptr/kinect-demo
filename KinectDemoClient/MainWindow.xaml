<Window x:Class="KinectDemoClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Client" Height="227.642" Width="248.001">
    <Grid>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="155,10,0,0" VerticalAlignment="Top" Width="75" Click="ConnectToServer"/>
        <TextBox Name="TextBox" HorizontalAlignment="Left" Height="127" Margin="10,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="75"/>
        <CheckBox Content="Depth" HorizontalAlignment="Left" Margin="90,37,0,0" VerticalAlignment="Top" Checked="DepthCheckBox_Checked" Unchecked="DepthCheckBox_Unchecked"/>
        <CheckBox Content="Color" HorizontalAlignment="Left" Margin="90,57,0,0" VerticalAlignment="Top" Checked="ColorCheckBox_Checked" Unchecked="ColorCheckBox_Unchecked"/>
        <CheckBox Content="Point Cloud" HorizontalAlignment="Left" Margin="90,77,0,0" VerticalAlignment="Top" Checked="PointCloudCheckBox_Checked" Unchecked="PointCloudCheckBox_Unchecked"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="10,167,0,0" VerticalAlignment="Top" Width="75" Click="SendMessage"/>
        <TextBox Name="ServerIpTextBox" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Path=Ip}" VerticalAlignment="Top" Width="140"/>
    </Grid>
</Window>
