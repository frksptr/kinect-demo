<UserControl x:Class="KinectDemoSGL.UIElement.ClientSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="Auto"
             Width="Auto"
             >
    <Grid>
        <StackPanel>
            <CheckBox Content="Send as one" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="SendAsOne_Checked" Unchecked="SendAsOne_Unchecked"/>
            <CheckBox Content="Depth Image" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="DepthImage_Checked" Unchecked="DepthImage_Unchecked"/>
            <CheckBox Content="Color Image" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="ColorImage_Checked" Unchecked="ColorImage_Unchecked"/>
            <CheckBox Content="Point Cloud" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="PointCloud_Checked" Unchecked="PointCloud_Unchecked"/>
            <CheckBox Content="Skeleton" HorizontalAlignment="Left" VerticalAlignment="Top" Checked="Skeleton_Checked" Unchecked="Skeleton_Unchecked"/>
            <Label Content="Blipbop"></Label>
        </StackPanel>

    </Grid>
</UserControl>
