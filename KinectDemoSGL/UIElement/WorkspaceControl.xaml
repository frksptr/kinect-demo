<UserControl x:Class="KinectDemo.WorkspaceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             >
    <StackPanel Name="WorkspaceData" Orientation="Horizontal">

        <TextBox Name="wsName" Width="Auto" MinWidth="60" Padding="2" Text="{Binding Path=Name, Mode=TwoWay}"/>

        <Label Content=" = " />

        <TextBox Name="pos1" Width="Auto" MinWidth="50" Padding="2" Text="{Binding Path=Vertices[0]}" />

        <Label Content=" " />

        <TextBox Name="pos2" Width="Auto" MinWidth="50" Padding="2" Text="{Binding Path=Vertices[1]}"/>

        <Label Content=" " />

        <TextBox Name="pos3" Width="Auto" MinWidth="50" Padding="2" Text="{Binding Path=Vertices[2]}"/>

        <Label Content=" " />

        <TextBox Name="pos4" Width="Auto" MinWidth="50" Padding="2" Text="{Binding Path=Vertices[3]}"/>

        <Button Content="Delete" Name="DeleteButton" Margin="5,0,0,0" />

        <Button Content="Add" Name="AddButton" Margin="5,0,0,0"  />

    </StackPanel>


</UserControl>
